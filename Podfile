# Uncomment this line to define a global platform for your project
# platform :ios, '6.0'
inhibit_all_warnings!

target 'SZLearning' do
    # 动画的不二之选
    pod 'pop'
    
    pod 'Aspects'
    
    # OC下网络请求库
    pod 'AFNetworking'
    
    # 强大的Block语法支持
    pod 'BlocksKit'
    
    # 监测网络连接状态
    pod 'Reachability'
    
    # 自动布局
    pod 'Masonry'
    
    # json转Model
    ## 使用参考: (http://southpeak.github.io/blog/2015/01/11/gong-ju-pian-:mantle/ )
    pod 'Mantle'
    
    # facebook 开源的一个 KVO 增强框架 (https://github.com/facebook/KVOController )
    ## 使用参考: (http://segmentfault.com/a/1190000000420162 )
    pod 'KVOController'
    
    # ReactiveCocoa
    pod 'ReactiveCocoa'
    
    # 强大的日志分析工具 — NSLogger (安装篇 http://ky-storm.cn/blog/463.html )
    pod 'NSLogger'
    
    pod 'KZBootstrap'
    
    #
    pod 'JTSImageViewController'
    
    # 易读易写的动画封装
    pod 'JHChainableAnimations'
    
    #
    pod 'FLEX', '~> 2.0', :configurations => ['Debug']
    
    
    # github (https://github.com/facebook/AsyncDisplayKit )
    pod 'AsyncDisplayKit'

    # 颜色库
    pod 'ChameleonFramework'
    
    #
    pod 'Shimmer'
    
    # OC  语法糖
    pod 'ObjectiveSugar'
    
    # OC
    pod 'libextobjc'
    


end

target 'SZLearningTests' do

end

